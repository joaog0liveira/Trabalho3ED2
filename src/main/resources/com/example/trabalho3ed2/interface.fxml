<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trabalho3ed2.InterfaceController">

    <Label text="Selecione a cidade de início:" />
    <ComboBox fx:id="startCityComboBox" />

    <Label text="Selecione a cidade de destino:" />
    <ComboBox fx:id="endCityComboBox" />

    <HBox spacing="10">
        <Label text="Menor Distância:" />
        <Label fx:id="resultLabel" />
    </HBox>

    <Button text="Calcular Menor Caminho" onAction="#calculateShortestDistance" />
</VBox>
